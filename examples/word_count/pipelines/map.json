{
  "pipeline": {
    "name": "map"
  },
  "description": "A pipeline that tokenizes scraped pages and appends counts of words to corresponding files.",
  "transform": {
    "cmd": [
      "sh",
      "/pfs/build/run.sh",
      "/pfs/scraper/", 
      "/pfs/out"
    ],
    "build": {
      "language": "go",
      "path": "../src"
    }
  },
  "input": {
    "pfs": {
      "repo": "scraper",
      "glob": "/*/*"
    }
  }
}
